# IP of the current node that other nodes can reach it on
SHAKENFIST_NODE_IP={{ SHAKENFIST_NODE_IP or ansible_ssh_host }}

# IP of node running database
SHAKENFIST_DB_IP={{ SHAKENFIST_DB_IP }}

# NIC of the current node which outbound traffic leaves on
SHAKENFIST_NODE_EGRESS_NIC={{ SHAKENFIST_NODE_EGRESS_NIC }}

# IP of node that is responsible for networking?
SHAKENFIST_NETWORK_NODE_IP={{ SHAKENFIST_NETWORK_NODE_IP }}

SHAKENFIST_DB_ROOT_PASSWORD={{ SHAKENFIST_DB_ROOT_PASSWORD }}
SHAKENFIST_DB_PASSWORD={{ SHAKENFIST_DB_PASSWORD }}

# Path on host to store volumes, images, etc
SHAKENFIST_STORAGE_PATH={{ SHAKENFIST_STORAGE_PATH }}

# Database connection string
SHAKENFIST_SQL_URL=mysql://sf:{{SHAKENFIST_DB_PASSWORD}}@{{SHAKENFIST_DB_IP}}/sf
