# IP of the current node that other nodes can reach it on
SHAKENFIST_NODE_IP={{ node_ip }}

# IP of node running database
SHAKENFIST_DB_IP={{ groups['db'][0]['node_ip'] }}

# NIC of the current node which outbound traffic leaves on
SHAKENFIST_NODE_EGRESS_NIC={{ node_egress_nic }}

# IP of node that is responsible for networking?
SHAKENFIST_NETWORK_NODE_IP={{ groups['hypervisor'][0]['node_ip'] }}

SHAKENFIST_DB_ROOT_PASSWORD={{ db_root_password }}
SHAKENFIST_DB_PASSWORD={{ db_user_password }}

# Path on host to store volumes, images, etc
SHAKENFIST_STORAGE_PATH={{ sf_storage_path | default("/srv/shakenfist") }}

# Database connection string
SHAKENFIST_SQL_URL=mysql://sf:{{ db_user_password }}@{{groups['db'][0]['node_ip']}}/sf
